<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
     android:id="@+id/flowClose"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:background="@drawable/whiteback"
     android:layout_alignParentBottom="true"
    > 
      <ImageView
            android:id="@+id/flow_close" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/close"/>
   </LinearLayout>
   <LinearLayout 
     android:id="@+id/flow_main"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:background="@drawable/whiteback"
     android:layout_above="@id/flowClose"
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
          <ImageView 
            android:id="@+id/goods_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/release"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/float_button_sell"/>
    </LinearLayout>
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/seek_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/release"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/float_button_seek"/>
    </LinearLayout>
</LinearLayout> 
<LinearLayout
    android:id="@+id/flow_empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="horizontal"
    android:layout_above="@id/flow_main"
    ></LinearLayout>
</RelativeLayout>
